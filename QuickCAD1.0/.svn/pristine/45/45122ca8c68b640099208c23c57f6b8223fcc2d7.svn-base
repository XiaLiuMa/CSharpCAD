    <EmbeddedResource Remove="01Rely\wwwroot\SystemConfig\**" />
    <EmbeddedResource Remove="01Rely\wwwroot\SystemManage\**" />
    <None Remove="01Rely\wwwroot\DeviceManage\**" />
    <None Remove="01Rely\wwwroot\SystemConfig\**" />
    <None Remove="01Rely\wwwroot\SystemManage\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\01工具库\Max.DbToolkit\Max.DbToolkit.csproj" />
    <ProjectReference Include="..\..\01工具库\Max.ISolator\Max.ISolator.csproj" />
    <ProjectReference Include="..\SetCharLib\SetCharLib.csproj" />
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="xcopy  $(ProjectDir)01Rely $(OutDir) /e /i /y /f" />
  </Target>

</Project>
