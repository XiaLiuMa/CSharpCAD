@* @{
    ViewData["Title"] = "Login Page";
} *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv='Expires' content='0'>
    <meta http-equiv='Pragma' content='no-cache'>
    <meta http-equiv='Cache-Control' content='no-cache'>
    <meta http-equiv="Content-Type" content="text/html" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>XXXX系统</title>
    <link rel="icon" href="~/favicon.ico" type="img/x-ico" />
    <link rel="stylesheet" href="~/css/Home_login.css" />
</head>
<body>
    <div class="login-header">
        <img src="~/img/header.png" style=" width: 100%; height: 158px;" />
    </div>
    <div class="login-header-div">
        <span id="projectName" class="login-header-title">XXXX系统</span>
    </div>
    <div class="container">
        <div class="loginCont">
            <div class="login">
                <h1 style="color:white;font-size:36px;font-family:MyNewFont">用户登录</h1>
                <form method="post" action="#" id="form">
                    <p>
                        <span><img src="~/img/登录-用户.png" /></span>
                        <span style="font-size: 20px; height: 30px; color: white; margin-left: 10px;">用户名</span>
                    </p>
                    <p>
                        <input type="text" name="userName" placeholder="账户名" id="userName" value="admin" autocomplete="off">
                    </p>
                    <p>
                        <span><img src="~/img/登录-密码.png" /></span>
                        <span style="font-size: 20px; height: 30px; color: white; margin-left: 10px;">密码</span>
                    </p>
                    <p>
                        <input type="password" name="password" placeholder="密码" id="password" value="123456" autocomplete="off">
                    </p>
                    <p>
                        <span><img src="~/img/登录-验证码.png" /></span>
                        <span style="font-size: 20px; height: 30px; color: white; margin-left: 10px;">验证码</span>
                    </p>
                    <div id="verifyCodeDemo">
                        <input type="text" id="validateCode" autocomplete="off" class="yzm-input required" placeholder="图片验证码">
                        <img id="valiCode" style="cursor: pointer;top:4px;" src="@Url.Action("GetValidateCode", "Home")?time=@DateTime.Now.Ticks" title="看不清？请点我"
                             onclick="javascript:ChangeSRC()" class="codeimg " />
                    </div>
                    <div class="yz-error">验证失败</div>
                    <p class="submit"><span type="submit" onclick="AuthorLogin()">登 录</span></p>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/jquery.cookie.js"></script>
    <script type="text/javascript">
        if (window != window.top) {
            top.location.href = location.href;
        }

        function ChangeSRC() {
            var time = (new Date()).getTime();
            $("#valiCode").attr("src", "/Home/GetValidateCode?time=" + time);
        }

        //显示错误信息
        function showError(msg) {
            $(".yz-error").text(msg);
            $(".yz-error").show();
        }

        //隐藏错误信息
        function hideError() {
            $(".yz-error").text('');
            $(".yz-error").hide();
        }

        //授权登录
        function AuthorLogin() {
            var userName = $("#userName").val();
            var pwd = $("#password").val();
            var validateCode = $("#validateCode").val();
            if (userName == '' || pwd == '') {
                showError("用户名或密码不能为空");
                return;
            }
            if (validateCode == '') {
                showError("验证码不能为空");
                return;
            }
            $.ajax({
                type: "POST",
                url: "/Home/AuthorLogin",
                data: { userName: userName, password: pwd, validateCode: validateCode },
                dataType: "json",
                success: function (data) {
                    if (data.code == 0) {
                        hideError();
                        //登录成功,进入首页
                        location.href = "/Home/Index";
                    }
                    else {
                        showError(data.msg);
                    }
                },
                error: function (e) {
                    showError("登录异常");
                }
            });
        }

        // $.ajax({
        //     type: "Get",
        //     url: "/Project/GetCurrentProjectInfo",
        //     dataType: "json",
        //     success: function (data) {
        //         if (data.code == 0) {
        //             $("#projectName").html(data.data.projectName);
        //         }
        //         else {
        //             showError(data.msg);
        //         }
        //     },
        //     error: function (e) {
        //         showError("网络异常");
        //     }
        // });
    </script>
</body>
</html>
