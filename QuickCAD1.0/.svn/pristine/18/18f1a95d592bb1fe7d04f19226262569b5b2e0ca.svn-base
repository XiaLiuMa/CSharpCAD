using Max.BaseKit;
using IsolatorOrigin.Models;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Authorization;
using IsolatorOrigin.Storage;
using IsolatorOrigin.Storage.Entities;
using IsolatorOrigin.Business;

namespace IsolatorOrigin.Controllers
{
    /// <summary>
    /// 子任务控制器
    /// </summary>
    [Authorize]
    public class ProduceTaskController : Controller
    {
        public IActionResult Index()
        {
            return View();
        }

        public IActionResult Detail()
        {
            return View();
        }

        /// <summary>
        /// 搜索所有
        /// </summary>
        /// <returns></returns>
        [HttpGet]
        public ActionResult<ResultMsg<List<ProduceTaskEntity>>> SearchAll()
        {
            return Ok(new ResultMsg<List<ProduceTaskEntity>>() { Code = StatusType.Success, Msg = "查询成功", Data = ConfigCacher.I.ProduceTask_Lst });
        }

        /// <summary>
        /// 根据类型搜索子任务
        /// </summary>
        /// <param name="taskType"></param>
        /// <returns></returns>
        [HttpGet]
        public ActionResult<ResultMsg<List<ProduceTaskEntity>>> SearchByType(string taskType = "")
        {
            var tlst = ConfigCacher.I.ProduceTask_Lst;
            #region 搜索
            if (!string.IsNullOrEmpty(taskType))
            {
                tlst = tlst.FindAll(p => taskType.Equals(p.TaskType)).ToList();
            }
            #endregion
            return Ok(new ResultMsg<List<ProduceTaskEntity>>() { Code = StatusType.Success, Msg = "查询成功", Data = tlst });
        }

        /// <summary>
        /// 分页搜索
        /// </summary>
        /// <param name="page"></param>
        /// <param name="limit"></param>
        /// <param name="condition"></param>
        /// <param name="rwtype"></param>
        /// <param name="rwstate"></param>
        /// <returns></returns>
        [HttpGet]
        public ResultPaging<ProduceTaskEntity> PagingSearch(int page = 1, int limit = 10, string condition = "", string rwtype = "", string rwstate = "")
        {
            var rd = new ResultPaging<ProduceTaskEntity>();

            var tlst = ConfigCacher.I.ProduceTask_Lst;
            #region 搜索
            if (!string.IsNullOrEmpty(condition))
            {
                tlst = tlst.FindAll(p => p.Cmd.Contains(condition) || p.TaskName.Contains(condition) || p.TaskDes.Contains(condition) || p.SqlStr.Contains(condition)).ToList();
            }
            if (!string.IsNullOrEmpty(rwtype))
            {
                tlst = tlst.FindAll(p => p.TaskType.Equals(rwtype)).ToList();
            }
            if (!string.IsNullOrEmpty(rwstate))
            {
                tlst = tlst.FindAll(p => p.TaskState.Equals(rwstate)).ToList();
            }
            #endregion

            var lst = tlst.Skip((page - 1) * limit).Take(limit).ToList();
            rd.Count = tlst.Count;
            rd.Data = lst;
            return rd;
        }

        /// <summary>
        /// 新增
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Add(ProduceTaskEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "新增失败，参数为空" });
            try
            {
                ConfigCacher.I.ProduceTask_Lst.Add(obj);
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "新增成功" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = $"新增失败，{ex.Message}" });
            }
        }

        /// <summary>
        /// 修改
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Update(ProduceTaskEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "修改失败，参数为空" });
            try
            {
                var tobj = ConfigCacher.I.ProduceTask_Lst.Find(p => p.Cmd.Equals(obj.Cmd));
                if (tobj != null)
                {
                    ConfigCacher.I.ProduceTask_Lst.Remove(tobj);
                    ConfigCacher.I.ProduceTask_Lst.Add(obj);
                }
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "修改成功" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = $"修改失败，{ex.Message}" });
            }
        }

        /// <summary>
        /// 删除
        /// </summary>
        /// <param name="ids"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Delete(string ids = "")
        {
            if (string.IsNullOrEmpty(ids)) return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "参数为空" });
            var idArr = ids.Split(',').ToList();
            int count = 0;
            idArr?.ForEach(i =>
            {
                var obj = ConfigCacher.I.ProduceTask_Lst.Find(p => i.Equals(p.Cmd));
                if (obj != null)
                {
                    ConfigCacher.I.ProduceTask_Lst.Remove(obj);
                    count++;
                }
            });
            if (count > 0)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "删除成功", Data = null });
            }
            else
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.Success, Msg = "删除失败", Data = null });
            }
        }
    }
}