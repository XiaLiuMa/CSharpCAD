using Max.BaseKit;
using IsolatorOrigin.Models;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Authorization;
using IsolatorOrigin.Storage.Entities;
using IsolatorOrigin.Business;
using Max.BaseKit.Exts;

namespace IsolatorOrigin.Controllers
{
    /// <summary>
    /// 定时任务控制器
    /// </summary>
    [Authorize]
    public class CroJobController : Controller
    {
        public IActionResult Index()
        {
            return View();
        }

        public IActionResult Detail()
        {
            return View();
        }

        /// <summary>
        /// 分页搜索
        /// </summary>
        /// <param name="page"></param>
        /// <param name="limit"></param>
        /// <param name="condition"></param>
        /// <returns></returns>
        [HttpGet]
        public ResultPaging<CronJobEntity> PagingSearch(int page = 1, int limit = 10, string condition = "")
        {
            var rd = new ResultPaging<CronJobEntity>();
            var tlst = ConfigCacher.I.CronJobCacher.Where();
            if (!string.IsNullOrEmpty(condition))
            {
                tlst = tlst.FindAll(p => p.Id.Contains(condition) || p.JobDes.Contains(condition) || p.CronDes.Contains(condition)).ToList();
            }
            var lst = tlst.Skip((page - 1) * limit).Take(limit).ToList();
            rd.Count = tlst.Count;
            rd.Data = lst;
            return rd;
        }

        /// <summary>
        /// 新增
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Add(CronJobEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "新增失败，参数为空" });
            try
            {
                bool flag = ConfigCacher.I.CronJobCacher.Add(obj);
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "新增成功" : "新增失败" });
            }
            catch (Exception ex)
            {
                NLogger.Error($"新增失败，{ex.Message}");
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"新增异常，{ex.Message}" });
            }
        }

        /// <summary>
        /// 修改
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Update(CronJobEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "修改失败，参数为空" });
            try
            {
                bool flag = ConfigCacher.I.CronJobCacher.Updata(obj, p => p.Id.Equals(obj.Id));
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "修改成功" : "修改失败" });
            }
            catch (Exception ex)
            {
                NLogger.Error($"修改失败，{ex.Message}");
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"修改异常，{ex.Message}" });
            }
        }

        /// <summary>
        /// 删除
        /// </summary>
        /// <param name="ids"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Delete(string ids = "")
        {
            if (string.IsNullOrEmpty(ids)) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "删除失败，参数为空" });
            try
            {
                var idArr = ids.TrimEnd(",").Split(',').ToList();
                bool flag = ConfigCacher.I.CronJobCacher.RemoveWherre(p => idArr.Contains(p.Id));
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "删除成功" : "删除失败" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"修改异常，{ex.Message}" });
            }
        }
    }
}