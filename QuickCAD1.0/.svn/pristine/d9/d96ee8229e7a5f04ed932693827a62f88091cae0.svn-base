* {
    margin: 0;
    font: inherit;
    vertical-align: baseline;
}

article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
    display: block;
}

ol, ul {
    list-style: none;
}

blockquote, q {
    quotes: none;
}

    blockquote:before, blockquote:after,
    q:before, q:after {
        content: none;
    }

table {
    border-collapse: collapse;
    border-spacing: 0;
}

body {
    font: 13px/20px 'Lucida Grande', Tahoma, Verdana, sans-serif;
    color: #262626;
    min-width: 1360px;
    height: 100vh;
    width: 100%;
    overflow: auto;
    /*background: #F7F8FB;*/
    background-image: url('../img/登录-背景.png')
}

.container {
    position: absolute;
    width: 63%;
    margin-top: 74px;
    margin-left: 19%;
}

.logo {
    font-size: 24px;
    font-weight: 400;
    height: 36px;
    line-height: 36px;
    display: flex;
    align-items: center;
}

    .logo img {
        position: relative;
        margin-right: 20px;
        width: 36px;
        height: 36px;
        vertical-align: bottom;
    }

.loginCont {
    display: flex;
    /* margin-top: 40px;*/
    /* background: #fff;
    box-shadow: 0 2px 20px 0 rgba(0,0,0,0.1);*/
    width: 512px;
    float: right;
    height: 612px;
    background: #153033;
    background-blend-mode: normal;
    border: 2px solid rgba(179, 252, 244, 1);
    box-shadow: inset 0px 0px 20px rgba(36, 237, 203, 0.2);
    backdrop-filter: blur(6px);
    /*  mix-blend-mode: overlay;*/
}

.login-header {
    width: 100%;
    height: 158px;
}

.login-header-img {
    width: 100%;
    height: 158px;
}

.login-header-title {
    font-size: 36px;
    color: white;
    text-shadow: 0px 0px 11px rgb(9 92 64 / 36%);
    letter-spacing: 6px;
    font-weight: 400;
    font-family: MyNewFont
}

.login-header-div {
    text-align: center;
    position: absolute;
    top: 30px;
    left: 0;
    right: 0;
    width: 470px;
    margin: auto;
    bottom: 0;
}

.loginCont .leftImg {
    width: 60%;
    background: url(banner-login.png);
    background-size: 100% 100%;
}

.loginCont .login {
    flex: 1;
    position: relative;
    margin: 0 auto;
    text-align: center;
    padding: 0px 36px 0px 36px;
}

.login h1 {
    height: 38px;
    line-height: 38px;
    font-weight: 400;
    font-size: 36px;
    color: #262B32;
    margin-top: 22px;
    margin-bottom: 36px;
    text-align: left;
}

.login p {
    margin: 10px auto;
    display: flex;
}

.yzm-img {
    width: 110px;
    height: 4.2vh;
    margin: 5px;
}

.yzm-input {
    flex: 1;
}

.login p:first-child {
    margin-top: 0;
}

.login input[type=text], .login input[type=password] {
    width: 100%;
}

span[type=submit] {
    width: 100%;
}

.login p.submit {
    margin-top: 65px;
    padding-left: 5px;
}

.codeimg {
    width: 90px;
    height: 66px;
    /* margin-top: 5px;*/
    margin-left: 14px;
}

span[type=submit] {
    height: 50px;
    line-height: 50px;
    font-size: 36px;
    font-weight: 400;
    color: #FFF;
    text-shadow: none;
    /*background: #4264D0;*/
    border: 0;
    outline: 0;
    box-sizing: content-box;
    display: inline-block;
    cursor: pointer;
    border-radius: 2px;
    background: url(../img/登录_按钮背景.png);
    font-family: MyNewFont;
}

input {
    font-family: 'Lucida Grande', Tahoma, Verdana, sans-serif;
    font-size: 14px;
}

    input[type=text], input[type=password] {
        /* margin: 5px;
        padding: 0 10px;*/
        height: 60px;
        line-height: 60px;
        color: white;
        border: none;
        border-radius: 2px;
        /*background: #F4F4F8;*/
        background: rgba(5, 247, 219, 0.1);
        background-blend-mode: normal;
        border: 2px solid rgba(100, 210, 190, 1);
        box-shadow: inset 0px 0px 20px rgba(36, 237, 203, 0.2);
        backdrop-filter: blur(6px);
        text-align: center;
    }

        input[type=text]:focus, input[type=password]:focus {
            outline: none;
        }

    input[type=checkbox] {
        margin: auto;
        vertical-align: middle;
    }

.yz-error {
    color: red;
    text-align: left;
    padding-left: 5px;
    display: none;
}

#picyzm {
    width: 100px;
    height: 42px;
    display: inline-block;
    margin: 5px;
}

#verifyCodeDemo {
    width: 100%;
    display: flex;
    margin-top: 10px;
}

.footer-box-msg {
    width: 100%;
    padding-top: 60px;
}

    .footer-box-msg p {
        text-align: center;
        color: #595959;
        margin-bottom: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .footer-box-msg p img {
            width: 18px;
            height: 18px;
            margin: 0 5px;
        }

@font-face {
    font-family: 'MyNewFont';
    src: url(../ttf/pmzd_font.ttf);
}