using IsolatorTarget.Models;
using Microsoft.AspNetCore.Mvc;
using Microsoft.AspNetCore.Authorization;
using IsolatorTarget.Storage.Entities;
using IsolatorTarget.Business;
using Max.BaseKit.Exts;

namespace IsolatorTarget.Controllers
{
    /// <summary>
    /// 消费任务控制器
    /// </summary>
    [Authorize]
    public class ConsumeTaskController : Controller
    {
        public IActionResult Index()
        {
            return View();
        }

        public IActionResult Detail()
        {
            return View();
        }

        /// <summary>
        /// 搜索所有
        /// </summary>
        /// <returns></returns>
        [HttpGet]
        public ActionResult<ResultMsg<List<ConsumeTaskEntity>>> SearchAll()
        {
            var rlst = ConfigCacher.I.ConsumeTaskCacher.Where();
            return Ok(new ResultMsg<List<ConsumeTaskEntity>>() { Code = StatusType.Success, Msg = "查询成功", Data = rlst });
        }

        /// <summary>
        /// 搜索图片服务集
        /// </summary>
        /// <returns></returns>
        [HttpGet]
        public ActionResult<ResultMsg<List<GroupDictVMod>>> SearchImgServices()
        {
            var rmds = new List<GroupDictVMod>();
            if (ConfigCacher.I.ImgMinioCacher.EntityList?.Count > 0)
            {
                var groupMod = new GroupDictVMod();
                groupMod.GroupName = "Minio服务";
                groupMod.Options = new List<DictVMod>();
                ConfigCacher.I.ImgMinioCacher.EntityList?.ForEach(p =>
                {
                    groupMod.Options.Add(new DictVMod() { Id = p.Id, Title = p.IDescribe });
                });
                rmds.Add(groupMod);
            }
            if (ConfigCacher.I.ImgFtpCacher.EntityList?.Count > 0)
            {
                var groupMod = new GroupDictVMod();
                groupMod.GroupName = "FTP服务";
                groupMod.Options = new List<DictVMod>();
                ConfigCacher.I.ImgFtpCacher.EntityList?.ForEach(p =>
                {
                    groupMod.Options.Add(new DictVMod() { Id = p.Id, Title = p.IDescribe });
                });
                rmds.Add(groupMod);
            }
            if (ConfigCacher.I.ImgLocalCacher.EntityList?.Count > 0)
            {
                var groupMod = new GroupDictVMod();
                groupMod.GroupName = "本地存储服务";
                groupMod.Options = new List<DictVMod>();
                ConfigCacher.I.ImgLocalCacher.EntityList?.ForEach(p =>
                {
                    groupMod.Options.Add(new DictVMod() { Id = p.Id, Title = p.IDescribe });
                });
                rmds.Add(groupMod);
            }

            return Ok(new ResultMsg<List<GroupDictVMod>>() { Code = StatusType.Success, Msg = "查询成功", Data = rmds });
        }

        /// <summary>
        /// 分页搜索
        /// </summary>
        /// <param name="page"></param>
        /// <param name="limit"></param>
        /// <param name="condition"></param>
        /// <returns></returns>
        [HttpGet]
        public ResultPaging<ConsumeTaskEntity> PagingSearch(int page = 1, int limit = 10, string condition = "")
        {
            var rd = new ResultPaging<ConsumeTaskEntity>();
            var tlst = ConfigCacher.I.ConsumeTaskCacher.Where();
            if (!string.IsNullOrEmpty(condition))
            {
                tlst = tlst.FindAll(p => p.Cmd.Contains(condition) || p.TaskName.Contains(condition) || p.TaskDes.Contains(condition)).ToList();
            }
            var lst = tlst.Skip((page - 1) * limit).Take(limit).ToList();
            rd.Count = tlst.Count;
            rd.Data = lst;
            return rd;
        }

        /// <summary>
        /// 新增
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Add(ConsumeTaskEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "新增失败，参数为空" });
            try
            {
                bool flag = ConfigCacher.I.ConsumeTaskCacher.Add(obj);
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "新增成功" : "新增失败" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"新增异常，{ex.Message}" });
            }
        }

        /// <summary>
        /// 修改
        /// </summary>
        /// <param name="obj"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Update(ConsumeTaskEntity obj)
        {
            if (obj == null) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "修改失败，参数为空" });
            try
            {
                bool flag = ConfigCacher.I.ConsumeTaskCacher.Updata(obj, p => p.Cmd.Equals(obj.Cmd));
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "修改成功" : "修改失败" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"修改异常，{ex.Message}" });
            }
        }

        /// <summary>
        /// 删除
        /// </summary>
        /// <param name="ids"></param>
        /// <returns></returns>
        [HttpPost]
        public ActionResult<ResultMsg<string>> Delete(string ids = "")
        {
            if (string.IsNullOrEmpty(ids)) return Ok(new ResultMsg<string>() { Code = StatusType.ParameterNull, Msg = "删除失败，参数为空" });
            try
            {
                var idArr = ids.TrimEnd(",").Split(',').ToList();
                bool flag = ConfigCacher.I.ConsumeTaskCacher.RemoveWherre(p => idArr.Contains(p.Cmd));
                return Ok(new ResultMsg<string>() { Code = flag ? StatusType.Success : StatusType.Failed, Msg = flag ? "删除成功" : "删除失败" });
            }
            catch (Exception ex)
            {
                return Ok(new ResultMsg<string>() { Code = StatusType.SysException, Msg = $"修改异常，{ex.Message}" });
            }
        }
    }
}