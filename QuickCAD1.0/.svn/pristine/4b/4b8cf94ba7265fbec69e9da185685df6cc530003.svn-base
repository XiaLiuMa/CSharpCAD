<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>系统设置</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/lib/layui-v2.9.2/css/layui.css" media="all">
    <link rel="stylesheet" href="/css/public.css" media="all">
    <style>
        .layui-form-item .layui-input-company {
            width: auto;
            padding-right: 10px;
            line-height: 38px;
        }
    </style>
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">
            <div class="layui-form layuimini-form">
                <div class="layui-form-item">
                    <label class="layui-form-label required">是否启用后台业务</label>
                    <div class="layui-input-block">
                        <input id="isBizUsable" name="isBizUsable" type="checkbox" lay-skin="switch" title="启用|禁用" lay-verify="required">
                        <tip>开启后将开启后台业务，关闭后只可使用页面功能。</tip>
                    </div>
                </div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        <button class="layui-btn layui-btn-normal" lay-submit lay-filter="setting">确认保存</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/lib/layui-v2.9.2/layui.js" charset="utf-8"></script>
    <script>
        layui.use(['form'], function () {
            var $ = layui.$;
            var form = layui.form;
            var layer = layui.layer;

            $.ajax({
                type: 'GET',
                url: '/SystemSet/GetConfig', //接口地址
                cache: false, //是否使用缓存
                dataType: "json",//数据类型
                success: function (res) {
                    layer.msg(res.msg);
                    if (res.code == 0) {
                        $('#isBizUsable').attr('checked', res.data.isBizUsable);
                        form.render('checkbox');
                    }
                },
                error: function () {
                    layer.msg("接口【" + "/SystemSet/GetConfig" + "】请求错误，状态码：" + err.status);
                    if (err.status == 401) {
                        parent.location.href = "/Hmoe/Login";
                    }
                }
            });

            //监听提交
            form.on('submit(setting)', function (data) {
                data.field.isBizUsable = data.field.isBizUsable == "on" ? true : false;
                $.ajax({
                    type: 'POST',
                    url: '/SystemSet/SetConfig', //接口地址
                    cache: false, //是否使用缓存
                    dataType: "json",//数据类型
                    data: data.field,//form数据
                    success: function (res) {//函数参数 "data" 为请求成功服务端返回的数据
                        layer.msg(res.msg);
                        if (res.code == 0) {

                        }
                    },
                    error: function (err) {
                        layer.msg("接口【" + "/SystemSet/SetConfig" + "】请求错误，状态码：" + err.status);
                        if (err.status == 401) {
                            parent.location.href = "/Hmoe/Login";
                        }
                    }
                });
                return false;
            });
        });
    </script>
</body>
</html>