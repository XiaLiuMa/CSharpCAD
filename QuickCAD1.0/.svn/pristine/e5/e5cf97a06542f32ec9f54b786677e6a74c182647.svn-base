<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>layui</title>
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link rel="stylesheet" href="/lib/layui-v2.9.2/css/layui.css" media="all">
    <link rel="stylesheet" href="/css/public.css" media="all">
</head>
<body>
    <div class="layuimini-container">
        <div class="layuimini-main">
            <fieldset class="table-search-fieldset">
                <legend>搜索信息</legend>
                <div style="margin: 10px 10px 10px 10px">
                    <form class="layui-form layui-form-pane" action="">
                        <div class="layui-form-item">
                            <div class="layui-inline">
                                <label class="layui-form-label">日志类型</label>
                                <div class="layui-input-inline">
                                    <select id="logType" name="logType" lay-filter="logType">
                                        <option value="" selected>全部</option>
                                        <optgroup label="资源端日志">
                                            <option value="zyd">全部资源端日志</option>
                                            <option value="zyd_info">资源端info日志</option>
                                            <option value="zyd_waring">资源端waring日志</option>
                                            <option value="zyd_error">资源端error日志</option>
                                        </optgroup>
                                        <optgroup label="目标端日志">
                                            <option value="mbd">全部目标端日志</option>
                                            <option value="mbd_info">目标端info日志</option>
                                            <option value="mbd_waring">目标端waring日志</option>
                                            <option value="mbd_error">目标端error日志</option>
                                        </optgroup>
                                    </select>
                                </div>
                            </div>
                            <div class="layui-inline">
                                <label class="layui-form-label">日期</label>
                                <div class="layui-input-inline layui-input-wrap">
                                    <div class="layui-input-prefix">
                                        <i class="layui-icon layui-icon-date"></i>
                                    </div>
                                    <input type="text" name="sdate" id="sdate" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                                </div>
                                <div class="layui-form-mid">-</div>
                                <div class="layui-input-inline layui-input-wrap">
                                    <div class="layui-input-prefix">
                                        <i class="layui-icon layui-icon-date"></i>
                                    </div>
                                    <input type="text" name="edate" id="edate" lay-verify="date" placeholder="yyyy-MM-dd" autocomplete="off" class="layui-input">
                                </div>
                            </div>
                            <div class="layui-inline">
                                <button type="submit" class="layui-btn layui-btn-primary" lay-submit lay-filter="data-search-btn"><i class="layui-icon"></i> 搜 索</button>
                            </div>
                        </div>
                    </form>
                </div>
            </fieldset>

            <script type="text/html" id="toolbarDemo">
                <div class="layui-btn-container">
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-download-btn" lay-event="download"> 下载 </button>
                    <button class="layui-btn layui-btn-sm layui-btn-danger data-delete-btn" lay-event="delete"> 删除 </button>
                </div>
            </script>

            <table class="layui-hide" id="currentTableId" lay-filter="currentTableFilter"></table>

            <script type="text/html" id="currentTableBar">
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-detail" lay-event="detail">详情</a>
                <a class="layui-btn layui-btn-normal layui-btn-xs data-count-download" lay-event="download">下载</a>
                <a class="layui-btn layui-btn-xs layui-btn-danger data-count-delete" lay-event="delete">删除</a>
            </script>

        </div>
    </div>
    <script src="/lib/jquery-3.4.1/jquery.js" charset="utf-8"></script>
    <script src="/lib/layui-v2.9.2/layui.js" charset="utf-8"></script>
    <script>
        var parentMod; //全局变量,要传给子页面的参数
        layui.use(['form', 'table'], function () {
            var $ = layui.jquery;
            var form = layui.form;
            var table = layui.table;
            var laydate = layui.laydate;

            laydate.render({
                elem: '#sdate'
            });

            laydate.render({
                elem: '#edate'
            });

            var page = 1;
            var limit = 10;

            table.render({ //渲染表格
                elem: '#currentTableId',
                type: "GET",
                url: '/LogMgt/PagingSearch',
                dataType: "json",
                where: { "page": page, "limit": limit, "logType": "", "stime": "", "etime": "" },
                toolbar: '#toolbarDemo',
                defaultToolbar: ['filter', 'exports', 'print'],
                cellMinWidth: 50,
                cols: [[
                    { type: "checkbox", width: 50 },
                    { field: 'belongSystem', title: '所属系统', sort: true },
                    { field: 'logType', title: '日志类型', sort: true },
                    { field: 'logFileName', title: '日志文件名称' },
                    { field: 'updateTime', title: '更新时间', sort: true },
                    { field: 'logFullFileName', title: '日志全文件名称', hide: true },
                    { title: '操作', minWidth: 100, toolbar: '#currentTableBar', align: "center" }
                ]],
                limits: [10, 15, 20, 30, 50, 100],
                limit: 10,
                page: true,
                skin: 'line'
            });

            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {
                var logType = data.field.logType;
                var sdate = data.field.sdate;
                var edate = data.field.edate;

                //执行搜索重载
                table.reload('currentTableId',
                    {
                        page: { curr: 1 },
                        where: { "page": page, "limit": limit, "logType": logType, "stime": sdate, "etime": edate }
                    }, 'data');

                return false;
            });

            //toolbar监听事件
            table.on('toolbar(currentTableFilter)', function (obj) {
                var checkStatus = table.checkStatus('currentTableId');
                if (obj.event === 'download') {  //下载操作
                    checkStatus.data.forEach(function (item) {
                        DownloadLog(item.logFullFileName);
                    });
                } else if (obj.event === 'delete') {  //批量删除操作
                    var ids = "";
                    checkStatus.data.forEach(function (item) {
                        ids += item.logFullFileName + ",";
                    });
                    layer.confirm('确定批量删除吗？', function (index) {
                        DeleteData(ids.substring(0, ids.lastIndexOf(',')));
                        $('searchBton').click();//触发搜索按钮
                        layer.close(index);
                    });
                }
            });

            //监听表格复选框选择
            table.on('checkbox(currentTableFilter)', function (obj) {
                console.log(obj)
            });

            table.on('tool(currentTableFilter)', function (obj) {
                parentMod = obj.data;
                if (obj.event === 'detail') {

                    var index = layer.open({
                        title: '日志详情',
                        type: 2,
                        shade: 0.2,
                        maxmin: false,
                        shadeClose: true,
                        area: ['100%', '100%'],
                        content: '/LogMgt/Detail',
                    });
                    $(window).on("resize", function () {
                        layer.full(index);
                    });
                    return false;
                } else if (obj.event === 'delete') {
                    layer.confirm('确定删除行吗？', function (index) {
                        DeleteData(obj.data.logFullFileName);
                        $('searchBton').click();//触发搜索按钮
                        layer.close(index);
                    });
                } else if (obj.event === 'download') {
                    DownloadLog(obj.data.logFullFileName);
                }
            });

            //删除数据
            function DeleteData(ids) {
                $.ajax({
                    type: 'Post', //你要请求的api的URL
                    url: "/LogMgt/Delete", //是否使用缓存
                    cache: false, //数据类型，这里我用的是json
                    dataType: "json",//必要的时候需要用JSON.stringify() 将JSON对象转换成字符串
                    data: { ids: ids },
                    success: function (res) {    //函数参数 "data" 为请求成功服务端返回的数据
                        if (res.code == 0) {
                            layer.msg(res.msg);
                        }
                    },
                    error: function (err) {
                        if (err.status == 401) {
                            parent.location.href = "/Hmoe/Login";
                        }
                    }
                });
            }

            //下载日志
            function DownloadLog(filePath) {
                $.ajax({
                    type: 'GET',
                    url: "/LogMgt/Download",
                    cache: false, //是否使用缓存
                    xhrFields: { responseType: 'blob' },// 指定响应数据类型为二进制流
                    data: { filePath: filePath },
                    success: function (data, status, xhr) {
                        var contentDisposition = xhr.getResponseHeader('Content-Disposition');
                        var fileName = contentDisposition.substring(contentDisposition.indexOf('=') + 1);
                        if (typeof window.navigator.msSaveBlob !== 'undefined') {
                            window.navigator.msSaveBlob(data, fileName);// 兼容IE浏览器
                        } else {
                            // 根据浏览器类型设置下载链接
                            var blobUrl = URL.createObjectURL(data);
                            var link = document.createElement('a');
                            link.href = blobUrl;
                            link.download = fileName;
                            link.click();
                            URL.revokeObjectURL(blobUrl);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('下载文件出错：', error);
                        layui.layer.msg('下载文件出错：' + error);
                    }
                });
            }
        });
    </script>

</body>
</html>